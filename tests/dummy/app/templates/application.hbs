<div class="header">
    <h1 class="header__title">Ember Acl</h1>
    <div class="user-widget">
        &nbsp;
        {{#if this.acl.user}}
            <u><strong title={{concat "roles: " (join ", " (map-by "name" this.acl.user.roles))}}>{{ this.acl.user.name }}</strong></u>
        {{/if}}
    </div>
</div>

<div class="content">
    <div class="content__aside">
        <div class="nav">
            <h3 class="nav__title">Navigation</h3>
            <div class="nav__item">
                <LinkTo @route="index">Index</LinkTo>
            </div>
            <div class="nav__item">
                <LinkTo @route="login">Login</LinkTo>
            </div>
            <div class="nav__item">
                <LinkTo @route="admin">Admin</LinkTo>
            </div>
            <div class="nav__item">
                <LinkTo @route="manager-and-admin">Manager and Admin</LinkTo>
            </div>
            <div class="nav__item">
                <LinkTo @route="manager-or-user">Manager or User</LinkTo>
            </div>
            <div class="nav__item">
                <LinkTo @route="without-admin">Without Admin</LinkTo>
            </div>
        </div>
        <div class="visibility">
            <h3 class="visibility__title">Visibility</h3>
            <div class="visibility__item">
                <div class="visibility__content{{if (and (has-role "admin") (has-role roles=(array "admin"))) " visibility__content--active"}}">
                    Content for admin.
                </div>
            </div>
            <div class="visibility__item">
                <div class="visibility__content{{if (and (has-role "manager") (has-role roles=(array "manager"))) " visibility__content--active"}}">
                    Content for manager.
                </div>
            </div>
            <div class="visibility__item">
                <div class="visibility__content{{if (and (has-role "user") (has-role roles=(array "user"))) " visibility__content--active"}}">
                    Content for user.
                </div>
            </div>
            <div class="visibility__item">
                <div class="visibility__content{{if (has-role bannedRoles=(array "admin")) " visibility__content--active"}}">
                    Content is not for admin.
                </div>
            </div>
            <div class="visibility__item">
                <div class="visibility__content{{if (has-role bannedRoles=(array "manager")) " visibility__content--active"}}">
                    Content is not for manager.
                </div>
            </div>
            <div class="visibility__item">
                <div class="visibility__content{{if (has-role  bannedRoles=(array "user")) " visibility__content--active"}}">
                    Content is not for user.
                </div>
            </div>
        </div>
    </div>
    <div class="content__main">
        {{outlet}}
    </div>
</div>
